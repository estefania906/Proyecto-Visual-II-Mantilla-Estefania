@using Modelo
@model Cliente
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edición de cliente</h1>
<p>Formulario para editar un cliente en el sistema </p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Usted está actualizando el cliente: @Model.NombreCliente</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="ClienteId" />

                <div class="form-group">
                    <label class="control-label"> Nombre:</label>
                    <input class="form-control" asp-for="NombreCliente" />
                </div>
                <div class="form-group">
                    <label class="control-label"> Apellido:</label>
                    <input class="form-control" asp-for="ApellidoCliente" />
                </div>
                <div class="form-group">
                    <label class="control-label"> Cedula:</label>
                    <input class="form-control" asp-for="CedulaCliente" />
                </div>
                <div class="form-group">
                    <label class="control-label"> Telefono:</label>
                    <input class="form-control" asp-for="TelefonoCliente" />
                </div>
                <div class="form-group">
                    <label class="control-label"> Garante:</label>
                    <input class="form-control" asp-for="Garante.NombreGarante" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Actualizar el cliente" />
                </div>
            </form>

        </div>
    </div>

</div>